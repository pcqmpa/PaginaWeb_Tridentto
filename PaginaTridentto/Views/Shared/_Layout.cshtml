    <script type="text/javascript">

        $(function () {

            var nombre_usuario = sessionStorage.getItem("nombre_usuario");

            if (nombre_usuario != undefined) {

                $("#txt-usuario-header").html(nombre_usuario);
            }

            $(".modal-close").on("click", function () {
                $(".modal-mensaje").css('opacity', '0');
                $(".modal-mensaje").css('pointer-events', '');
            });



        });

        var icono_mensaje=
        {
            error: "glyphicon glyphicon-remove",
            ok: "glyphicon glyphicon-ok",
            info: "glyphicon glyphicon-info-sign",
            question: "glyphicon glyphicon-question-sign",
            alerta: "glyphicon glyphicon-warning-sign"
        }

        function Mensaje(mensaje,icono,titulo)
        {
            $(".modal-mensaje").css('opacity', '1');
            $(".modal-mensaje").css('pointer-events', 'auto');

            $("#txt-mensaje-modal").html(mensaje);
            $("#txt-titulo-mensaje-modal").html(titulo);
            $("#icono-mensaje-modal").attr('class', '');
            $("#icono-mensaje-modal").addClass(icono);
        }


    </script>

